<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFD"
    android:orientation="vertical"
    android:padding="16dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:background="@drawable/ic_search"
        android:elevation="4dp"
        android:layout_marginBottom="8dp"
        android:clipToPadding="false">

        <EditText
            android:id="@+id/editTextPetName"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="serif"
            android:hint="Product Name"
            android:padding="8dp"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="2dp"
            android:backgroundTint="#000403"
            android:background="@drawable/searchic"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:elevation="4dp"
            android:fontFamily="serif"
            app:cornerRadius="8dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:fontFamily="serif"
        android:hint="Description"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp"
        android:clipToPadding="false" />

    <EditText
        android:id="@+id/editTextAge"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:fontFamily="serif"
        android:hint="Age"
        android:inputType="number"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp"
        android:clipToPadding="false" />

    <EditText
        android:id="@+id/editTextNote"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:fontFamily="serif"
        android:hint="Product Price"
        android:inputType="number"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp"
        android:clipToPadding="false" />

    <ImageView
        android:id="@+id/petImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/choice"

        android:layout_marginBottom="16dp"
        android:clipToPadding="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="4dp"
    android:elevation="4dp"
    android:layout_marginBottom="00dp"
    android:clipToPadding="false">

    <Button
        android:id="@+id/buttonUpdate"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:backgroundTint="#040505"
    android:fontFamily="serif"
    android:text="Update"
    android:textColor="#FFFEFE"
    android:padding="12dp"
    android:elevation="4dp"
    app:cornerRadius="8dp" />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:backgroundTint="#000000"
    android:text="Delete"
    android:textColor="#FBFBFB"
    android:padding="12dp"
    android:elevation="4dp"
    app:cornerRadius="8dp" />


    <EditText
        android:id="@+id/editTextSex"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1000dp"
        android:background="@android:color/transparent"
        android:fontFamily="serif"
        android:layout_marginBottom="8dp" />
</LinearLayout>
</LinearLayout>
